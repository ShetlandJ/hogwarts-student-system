<% @students.each do |student| %>
  <% if student.house() == "Slytherin" %>
  <% @name_array = [] %>
  <% @name_array << student %>
  <h1>Students in Slytherin: <%= @name_array.count() %></h1>


  <article>
    <p>Student ID: <%= student.id %></p>
    <p>Name: <%= student.student_name() %></p>
    <p>Age: <%= student.age() %></p>
    <p>House: <%= student.house() %></p>

    <div id="actions">
      <form action="/students/<%= student.id %>" method="GET">
        <input type="submit" value="Show" id="btn-get">
      </form>

      <form action="/students/<%= student.id %>/edit" method="GET">
        <input type="submit" value="Edit" id="btn-edit">
      </form>
      <form action="/students/<%= student.id %>/delete" method="POST">
        <input type="submit" value="âœ– Delete" id="btn-delete">
      </form>
    </div>
    <hr />
  </article>
  <% end %>
  <% end %>
